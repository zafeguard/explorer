{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}